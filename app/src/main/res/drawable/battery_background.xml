<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배터리 외형 -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#CCCCCC"/> <!-- 배터리 외부 색상 -->
            <corners android:radius="10dp"/> <!-- 둥근 모서리 -->
        </shape>
    </item>
    <!-- 배터리 상단 부분 -->
    <item android:right="4dp" android:left="4dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#999999"/> <!-- 상단 색상 -->
            <corners android:radius="5dp"/> <!-- 둥근 모서리 -->
        </shape>
    </item>
</layer-list>
